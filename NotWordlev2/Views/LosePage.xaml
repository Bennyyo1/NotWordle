<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotWordlev2.Views.LosePage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#121213">
    <VerticalStackLayout>
        <Label
            Margin="0,50,0,10"
            Text="Better luck next time."
            FontSize="23"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Margin="0,0,0,10"
            Text="The correct word was:"
            FontSize="23"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Margin="0,0,0,10"
            Text="{Binding AnswerText}"
            FontSize="18"
            TextColor="Red"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            
        </Label>
        <Button
            Text="Back To Main"
            WidthRequest="200"
            Clicked="OnBackToMain">

        </Button>
    </VerticalStackLayout>
</ContentPage>