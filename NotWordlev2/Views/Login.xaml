<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotWordlev2.Views.Login"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#121213">
    <VerticalStackLayout>
        <Entry
            x:Name="UserName"
            Placeholder="Username"
            TextColor="White"
            HorizontalOptions="Center"
            Margin="30">
         
        </Entry>
        <Entry
            x:Name="Password"
            Placeholder="Password"
            TextColor="White"
            HorizontalOptions="Center">

        </Entry>
        <Button
            WidthRequest="200"
            Text="Sign in"
            Clicked="OnSignInBtnClicked">
            
        </Button>
        <Button
            WidthRequest="200"
            Text="Back to main"
            Clicked="OnBackToMainClicked"
            Margin="30">
            
        </Button>
        
    </VerticalStackLayout>
</ContentPage>